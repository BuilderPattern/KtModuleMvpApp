<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tl="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".MainActivity">

    <android.support.v4.view.ViewPager
            android:id="@+id/activity_main_viewpager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    <com.flyco.tablayout.CommonTabLayout
            android:id="@+id/activity_main_tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="@color/color_ffffff"
            tl:tl_iconGravity="TOP"
            tl:tl_iconHeight="30dp"
            tl:tl_iconWidth="30dp"
            tl:tl_iconMargin="3dp"
            tl:tl_indicator_bounce_enable="true"
            tl:tl_textSelectColor="@color/color_3498DB"
            tl:tl_textUnselectColor="@color/color_c1c1c1"
            tl:tl_textsize="16sp"
            tl:tl_underline_height="0dp"
            android:layout_alignParentBottom="true"
    ></com.flyco.tablayout.CommonTabLayout>

</LinearLayout>